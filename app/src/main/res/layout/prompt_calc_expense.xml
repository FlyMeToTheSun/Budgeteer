<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/prompt_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter New Amount of Expense"
        android:fontFamily="@font/robotoregular"
        android:textSize="20sp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_login_email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:fontFamily="@font/poppinsbold"
        android:textColorHint="#A59797"

        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"

        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/black"
        app:boxStrokeWidth="2dp"
        app:boxStrokeWidthFocused="2dp"
        android:gravity="center"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/new_expense_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#A59797"
            android:inputType="number"
            android:gravity="center"

            android:maxLength="30"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_okay_expense"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="200dp"

        android:text="Okay"
        android:fontFamily="@font/montserratregular"
        android:textAllCaps="false"
        android:gravity="center"
        android:textSize="23sp"

        android:backgroundTint="#20C96E"
        android:textColor="@color/white"
        />

</LinearLayout>