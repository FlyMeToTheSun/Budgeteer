<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<item android:id="@android:id/background">
<shape>
<corners android:radius="100dp" />
<gradient
    android:centerColor="#29474954"
android:endColor="#29474954"
android:startColor="#29474954" />
</shape>
    </item>

<item android:id="@android:id/secondaryProgress">
<scale android:scaleWidth="100%">
<shape>
<corners android:radius="100dp" />
<gradient
    android:centerColor="#01AA4F"
android:endColor="#01AA4F"
android:startColor="#01AA4F" />
</shape>
    </scale>
    </item>
<item android:id="@android:id/progress">
<scale android:scaleWidth="100%">
<shape>
<corners android:radius="100dp" />
<gradient
    android:angle="360"
android:endColor="#01AA4F"
android:startColor="#EEA46B" />
</shape>
    </scale>
    </item>

    </layer-list>